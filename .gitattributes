# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.c text eol=lf

# Scripts
*.sh text eol=lf
*.py text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Data files
*.osm text eol=lf
*.xml text eol=lf
*.csv text eol=lf

# Build files
*.cmake text eol=lf
CMakeLists.txt text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.pdf binary
*.ttf binary
*.otf binary

# Archives
*.zip binary
*.tar binary
*.gz binary
